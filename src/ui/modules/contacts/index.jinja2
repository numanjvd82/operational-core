{% extends "authenticated.jinja2" %}

{% block module %}

<section class="container">

  {% block contact %}

  <div class="card">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
        </tr>
      </thead>
      <tbody>
        {% for contact in contacts %}
        <tr>
          <th scope="row">{{ contact.id }}</th>
          <td>
            <a href="{{ url_for('contact_show', id=contact.id) }}">
              {{ contact.name }}
            </a>
          </td>
          <td>{{ contact.email }}</td>
        </tr>
        {% endfor %}
    </table>
  </div>

  {% endblock %}

</section>


{% endblock %}